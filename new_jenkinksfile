pipeline {
    agent any

    stages {
        stage('Clean repo'){
            steps {
                sh 'rm -rf ./*'
            }
        }
        stage('Clone repo') {
            steps {
                sh "git clone https://github.com/AlexKuznetsov7878/cognyte.git"
            }
        }
        stage('Run code'){
            steps {
                sh 'pwd'
                sh 'ls -lrt'
                sh 'df -kh'
            }
        }
    }
}
